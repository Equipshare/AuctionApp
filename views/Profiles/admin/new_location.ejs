<!-- views/Profiles/new_location.ejs -->
<!doctype html>
<html>
<head>
	<title>Add new Location</title>
</head>
<body>
<div>
	<%- include header.ejs %>
	<div class="main">
		<div class="row">
			<!-- LOCAL INFORMATION -->
			<div class="col-sm-6">
				<div class="well">
					<h3><span class="fa fa-user"></span>Add new Location</h3>
					<p>
						<!-- show any messages that come back with authentication -->
						<% if (message.length > 0) { %>
							<div class="alert alert-danger"><%= message %></div>
						<% } %>

						<form action="/new_location" method="post">
							City:<br>
							<input type="text" name="city">
							<br>
							State:<br>
							<input type="text" name="state">
							<br><br>
							<input type="submit" value="Submit">
						</form>
					</p>
				</div>
			</div>
		</div>
	</div>
	</div>
</body>
</html>